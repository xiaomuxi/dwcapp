<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="@dimen/dimen_30"
        android:layout_height="@dimen/dimen_30"
        android:layout_marginRight="@dimen/dimen_15"
        android:layout_marginBottom="@dimen/dimen_10"
        android:layout_gravity="end"
        android:src="@drawable/ic_delete_grey"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/dimen_15"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_province"
                android:layout_width="@dimen/dimen_35"
                android:layout_height="@dimen/dimen_35"
                android:gravity="center"
                android:layout_marginRight="@dimen/dimen_3"
                android:background="@drawable/selector_red"
                android:text=""
                android:textSize="17sp"
                android:textColor="@color/text_white"/>

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="@dimen/dimen_35"
                android:layout_height="@dimen/dimen_35"
                android:gravity="center"
                android:background="@drawable/selector_red"
                android:layout_marginRight="@dimen/dimen_15"
                android:text=""
                android:textSize="17sp"
                android:textColor="@color/text_white"/>

            <TextView
                android:id="@+id/tv_number_1"
                android:layout_width="@dimen/dimen_35"
                android:layout_height="@dimen/dimen_35"
                android:gravity="center"
                android:background="@drawable/selector_gray_stroke_red"
                android:layout_marginRight="@dimen/dimen_3"
                android:text=""
                android:textSize="17sp"
                android:textColor="@color/text_black"/>
            <TextView
                android:id="@+id/tv_number_2"
                android:layout_width="@dimen/dimen_35"
                android:layout_height="@dimen/dimen_35"
                android:gravity="center"
                android:background="@drawable/selector_gray_stroke_red"
                android:layout_marginRight="@dimen/dimen_3"
                android:text=""
                android:textSize="17sp"
                android:textColor="@color/text_black"/>
            <TextView
                android:id="@+id/tv_number_3"
                android:layout_width="@dimen/dimen_35"
                android:layout_height="@dimen/dimen_35"
                android:gravity="center"
                android:background="@drawable/selector_gray_stroke_red"
                android:layout_marginRight="@dimen/dimen_3"
                android:text=""
                android:textSize="17sp"
                android:textColor="@color/text_black"/>
            <TextView
                android:id="@+id/tv_number_4"
                android:layout_width="@dimen/dimen_35"
                android:layout_height="@dimen/dimen_35"
                android:gravity="center"
                android:background="@drawable/selector_gray_stroke_red"
                android:layout_marginRight="@dimen/dimen_3"
                android:text=""
                android:textSize="17sp"
                android:textColor="@color/text_black"/>
            <TextView
                android:id="@+id/tv_number_5"
                android:layout_width="@dimen/dimen_35"
                android:layout_height="@dimen/dimen_35"
                android:gravity="center"
                android:background="@drawable/selector_gray_stroke_red"
                android:layout_marginRight="@dimen/dimen_15"
                android:text=""
                android:textSize="17sp"
                android:textColor="@color/text_black"/>

            <TextView
                android:id="@+id/tv_number_6"
                android:layout_width="@dimen/dimen_35"
                android:layout_height="@dimen/dimen_35"
                android:gravity="center"
                android:background="@drawable/selector_gray_stroke_green"
                android:text=""
                android:textSize="17sp"
                android:textColor="@color/text_black"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15"
            android:id="@+id/rv_letters"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="280dp"/>
        <GridView
            android:id="@+id/gv_province"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15"
            android:numColumns="7"
            android:listSelector="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="270dp"/>
        <GridView
            android:id="@+id/gv_city"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15"
            android:numColumns="7"
            android:visibility="gone"
            android:listSelector="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="270dp"/>
        <GridView
            android:id="@+id/gv_number_1"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15"
            android:numColumns="7"
            android:visibility="gone"
            android:listSelector="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="270dp"/>
        <GridView
            android:id="@+id/gv_number_2"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15"
            android:numColumns="7"
            android:visibility="gone"
            android:listSelector="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="270dp"/>
        <GridView
            android:id="@+id/gv_number_3"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15"
            android:numColumns="7"
            android:visibility="gone"
            android:listSelector="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="270dp"/>
        <GridView
            android:id="@+id/gv_number_4"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15"
            android:numColumns="7"
            android:visibility="gone"
            android:listSelector="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="270dp"/>
        <GridView
            android:id="@+id/gv_number_5"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15"
            android:numColumns="7"
            android:visibility="gone"
            android:listSelector="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="270dp"/>
        <GridView
            android:id="@+id/gv_number_6"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15"
            android:numColumns="7"
            android:visibility="gone"
            android:listSelector="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="270dp"/>

        <TextView
            android:id="@+id/tv_complete"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="@dimen/dimen_15"
            android:gravity="center"
            android:background="@drawable/btn_new_pressed"
            android:text="完成"
            android:textColor="@color/text_white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>