<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_mine"
    android:orientation="vertical">
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_main_red"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_20"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.weddingcar.driver.common.ui.CircleImageView
                        android:id="@+id/iv_head"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/my_head"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_20"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="@color/text_white"
                            android:textSize="@dimen/sp_18"
                            android:layout_marginBottom="@dimen/dimen_5"/>
                        <TextView
                            android:id="@+id/tv_car_model"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_5"
                            android:text="@string/text_mine_car_model"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/text_white"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/iv_message"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dimen_3"
                            android:src="@drawable/nav_information"
                            android:layout_marginBottom="@dimen/dimen_15"/>
                        <ImageView
                            android:id="@+id/iv_qr_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dimen_3"
                            android:layout_marginTop="@dimen/dimen_5"
                            android:src="@drawable/ic_code"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_order_num"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:lines="2"
                        android:lineSpacingExtra="@dimen/dimen_5"
                        android:padding="@dimen/dimen_5"
                        android:gravity="center_horizontal"
                        android:text="@string/text_order_num"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/sp_12"/>
                    <TextView
                        android:id="@+id/tv_evaluate"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:lines="2"
                        android:lineSpacingExtra="@dimen/dimen_5"
                        android:padding="@dimen/dimen_5"
                        android:gravity="center_horizontal"
                        android:text="@string/text_evaluate"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/sp_12"/>
                    <TextView
                        android:id="@+id/tv_income"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:lines="2"
                        android:lineSpacingExtra="@dimen/dimen_5"
                        android:padding="@dimen/dimen_5"
                        android:gravity="center_horizontal"
                        android:text="@string/text_income"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/sp_12"/>
                    <TextView
                        android:id="@+id/tv_complete_order"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:lines="2"
                        android:lineSpacingExtra="@dimen/dimen_5"
                        android:padding="@dimen/dimen_5"
                        android:gravity="center_horizontal"
                        android:text="@string/text_complete_order"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/sp_12"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dimen_10"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_white"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_wallet"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_50"
                        android:background="?android:attr/selectableItemBackground"
                        android:paddingLeft="@dimen/dimen_15"
                        android:paddingRight="@dimen/dimen_15"
                        android:gravity="center_vertical"
                        android:drawablePadding="@dimen/dimen_15"
                        android:drawableLeft="@drawable/ic_wallet"
                        android:drawableRight="@drawable/common_rightarrowbutton"
                        android:text="钱包"
                        android:textColor="@color/text_main_gray"
                        android:textSize="@dimen/sp_14" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/divide_main_gray"/>
                    <TextView
                        android:id="@+id/tv_vip"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_50"
                        android:background="?android:attr/selectableItemBackground"
                        android:paddingLeft="@dimen/dimen_15"
                        android:paddingRight="@dimen/dimen_15"
                        android:gravity="center_vertical"
                        android:drawablePadding="@dimen/dimen_15"
                        android:drawableLeft="@drawable/ic_associator"
                        android:drawableRight="@drawable/common_rightarrowbutton"
                        android:text="会员"
                        android:textColor="@color/text_main_gray"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_white"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/ll_car_auth"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_50"
                        android:paddingLeft="@dimen/dimen_15"
                        android:paddingRight="@dimen/dimen_15"
                        android:gravity="center_vertical"
                        android:background="?android:attr/selectableItemBackground"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:drawablePadding="@dimen/dimen_15"
                            android:drawableLeft="@drawable/ic_car_authentication"
                            android:text="车辆认证"
                            android:textColor="@color/text_main_gray"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/tv_car_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:drawablePadding="@dimen/dimen_15"
                            android:drawableRight="@drawable/common_rightarrowbutton"
                            android:text="车辆待认证"
                            android:textColor="@color/text_main_gray"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/divide_main_gray"/>
                    <TextView
                        android:id="@+id/tv_car_life"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_50"
                        android:background="?android:attr/selectableItemBackground"
                        android:paddingLeft="@dimen/dimen_15"
                        android:paddingRight="@dimen/dimen_15"
                        android:gravity="center_vertical"
                        android:drawablePadding="@dimen/dimen_15"
                        android:drawableLeft="@drawable/ic_car_live"
                        android:drawableRight="@drawable/common_rightarrowbutton"
                        android:text="车生活"
                        android:textColor="@color/text_main_gray"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:background="@color/bg_white"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_invite"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_50"
                        android:background="?android:attr/selectableItemBackground"
                        android:paddingLeft="@dimen/dimen_15"
                        android:paddingRight="@dimen/dimen_15"
                        android:gravity="center_vertical"
                        android:drawablePadding="@dimen/dimen_15"
                        android:drawableLeft="@drawable/ic_invite"
                        android:drawableRight="@drawable/common_rightarrowbutton"
                        android:text="邀请好友"
                        android:textColor="@color/text_main_gray"
                        android:textSize="@dimen/sp_14" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/divide_main_gray"/>
                    <TextView
                        android:id="@+id/tv_help"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_50"
                        android:background="?android:attr/selectableItemBackground"
                        android:paddingLeft="@dimen/dimen_15"
                        android:paddingRight="@dimen/dimen_15"
                        android:gravity="center_vertical"
                        android:drawablePadding="@dimen/dimen_15"
                        android:drawableLeft="@drawable/ic_help"
                        android:drawableRight="@drawable/common_rightarrowbutton"
                        android:text="帮助中心"
                        android:textColor="@color/text_main_gray"
                        android:textSize="@dimen/sp_14" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/divide_main_gray"/>
                    <TextView
                        android:id="@+id/tv_setting"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_50"
                        android:background="?android:attr/selectableItemBackground"
                        android:paddingLeft="@dimen/dimen_15"
                        android:paddingRight="@dimen/dimen_15"
                        android:gravity="center_vertical"
                        android:drawablePadding="@dimen/dimen_15"
                        android:drawableLeft="@drawable/ic_set"
                        android:drawableRight="@drawable/common_rightarrowbutton"
                        android:text="设置"
                        android:textColor="@color/text_main_gray"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>