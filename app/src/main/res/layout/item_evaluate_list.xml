<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:orientation="horizontal">
    <com.weddingcar.driver.common.ui.CircleImageView
        android:id="@+id/iv_header"
        android:layout_margin="@dimen/dimen_15"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/my_head"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginBottom="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_15"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_order"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="订单号：12341234123"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_14"/>
            <TextView
                android:id="@+id/tv_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="王先生"
                android:textSize="14sp"
                android:textColor="@color/text_black"/>
            <RatingBar
                android:id="@+id/rb_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:ratingBarStyleSmall"
                android:layout_marginTop="@dimen/dimen_1"
                android:progressTint="#ffbb00"
                android:numStars="5"
                android:rating="5"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8"
            android:gravity="center"
            android:text="2018年12月12日"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text_main_gray"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divide_main_gray"/>
        <TextView
            android:id="@+id/tv_evaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8"
            android:gravity="center"
            android:text="准时到达"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_black"/>
    </LinearLayout>

</LinearLayout>