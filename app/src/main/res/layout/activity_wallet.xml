<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_margin="@dimen/dimen_15"
        android:background="@drawable/shape_wallet_deep_blue">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_15"
            android:text="账户余额"
            android:textColor="@color/text_white"
            android:textSize="@dimen/sp_12"/>

        <TextView
            android:id="@+id/tv_account_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_15"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_detial"/>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_account_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1200"
                android:textSize="44sp"
                android:textColor="@color/bg_white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(元)"
                android:textSize="14sp"
                android:textColor="@color/bg_white"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_account_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_15"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_cash"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_15"
        android:background="@drawable/shape_wallet_brown">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_15"
            android:text="保证金余额"
            android:textColor="@color/text_white"
            android:textSize="@dimen/sp_12"/>
        <TextView
            android:id="@+id/tv_bond_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_15"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_detial"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_bond_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000"
                android:textSize="44sp"
                android:textColor="@color/bg_white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(元)"
                android:textSize="14sp"
                android:textColor="@color/bg_white"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_bond_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_15"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_cash"/>
        <TextView
            android:id="@+id/tv_bond_recharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_15"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/tv_bond_cash"
            android:background="@drawable/btn_recharge"/>
    </RelativeLayout>

</LinearLayout>